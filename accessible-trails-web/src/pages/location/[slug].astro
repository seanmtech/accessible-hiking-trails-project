---
import Layout from '../../layouts/Layout.astro';
import DistanceBadge from '../../components/DistanceBadge.astro';
import AdSlot from '../../components/AdSlot.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import parksData from '../../../../data/parks.json';
import type { Park } from '../../types';

export async function getStaticPaths() {
  const parks = parksData as Park[];
  return parks.map(park => ({
    params: { slug: park.id },
    props: { park }
  }));
}

interface Props {
  park: Park;
}

const { park } = Astro.props;

// Helper for status badge
const statusColors = {
  verified: 'bg-green-100 text-green-800',
  needs_review: 'bg-yellow-100 text-yellow-800'
};

const title = `${park.name} - Accessible Hiking & Trails in ${park.state}`;
const description = `Find wheelchair accessible restrooms, parking, and trails at ${park.name} in ${park.state}. Plan your accessible outdoor trip today.`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Park",
  "name": park.name,
  "description": description,
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": park.lat,
    "longitude": park.lon
  },
  "address": {
    "@type": "PostalAddress",
    "addressRegion": park.state
  },
  "amenityFeature": [
    {
      "@type": "LocationFeatureSpecification",
      "name": "Wheelchair Accessible Restrooms",
      "value": park.accessible_restrooms
    },
    {
      "@type": "LocationFeatureSpecification",
      "name": "Accessible Parking",
      "value": park.accessible_parking
    },
    {
      "@type": "LocationFeatureSpecification",
      "name": "Accessible Trails",
      "value": park.accessible_trails
    }
  ]
};

const detailsCategories = [
  { key: 'trails', label: 'Accessible Trails & Viewpoints', icon: '<path d="M13.73 21a2 2 0 0 1-3.46 0l-8-14A2 2 0 0 1 4 4h16a2 2 0 0 1 1.73 3l-8 14z"/>' },
  { key: 'parking', label: 'Accessible Parking', icon: '<rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M9 17V7h4a3 3 0 0 1 0 6H9"/>' },
  { key: 'camping', label: 'Accessible Camping', icon: '<path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>' },
  { key: 'lodging', label: 'Accessible Lodging', icon: '<path d="M3 21h18M5 21V7l8-4 8 4v14M8 9v2m8-2v2m-8 4v2m8-2v2"/>' },
  { key: 'restrooms', label: 'Accessible Restrooms', icon: '<path d="M9 11V6a3 3 0 1 1 6 0v5M6 11v-2a4 4 0 0 1 8 0v2M6 11h8M9 11v10M15 11v10"/>' },
  { key: 'general', label: 'Other Accessible Areas', icon: '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>' },
] as const;

const breadcrumbs = [
  { name: 'Home', href: '/' },
  { name: park.state.split(',')[0].trim(), href: `/states/${park.state.split(',')[0].trim()}` },
  { name: park.name, href: `/location/${park.id}`, current: true }
];
---

<Layout title={title} description={description} showSidebar={true}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  
  <!-- Sidebar Slot -->
  <div slot="sidebar" class="space-y-8">
     <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <h3 class="font-bold text-gray-900 mb-4">Plan Your Trip</h3>
        <p class="text-sm text-gray-600 mb-4">Check weather and trail conditions before you go.</p>
        <a href={`https://www.nps.gov/findapark/index.htm`} target="_blank" rel="noopener noreferrer" class="block w-full text-center bg-green-600 text-white font-semibold py-2 px-4 rounded hover:bg-green-700 transition-colors">
            Official Park Site
        </a>
     </div>
     <div class="sticky top-24">
        <AdSlot id={`sidebar-ad-${park.id}`} format="vertical" />
     </div>
  </div>

  <!-- Main Content -->
  <div class="mb-6">
    <Breadcrumbs items={breadcrumbs} />
  </div>

  <header class="mb-8">
      <div class="flex items-start justify-between gap-4 flex-wrap">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{park.name}</h1>
          <p class="text-gray-600 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            {park.state}
          </p>
        </div>
        <span class={`px-3 py-1 rounded-full text-xs font-medium uppercase tracking-wide ${statusColors[park.status] || 'bg-gray-100 text-gray-800'}`}>
          {park.status.replace('_', ' ')}
        </span>
      </div>
      
      <DistanceBadge lat={park.lat} lon={park.lon} />
  </header>

  {park.reviewer_notes && (
      <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-8 rounded-r-lg shadow-sm">
        <div class="flex items-start gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h3 class="font-bold text-blue-900 text-sm uppercase tracking-wide mb-1">Reviewer Notes</h3>
            <p class="text-blue-800">{park.reviewer_notes}</p>
          </div>
        </div>
      </div>
  )}

  <!-- Accessibility Quick-Box -->
  <section class="bg-green-50 rounded-xl border border-green-200 p-6 mb-8 shadow-sm">
      <h2 class="text-xl font-bold mb-4 text-green-900 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
          Accessibility at a Glance
      </h2>

      {(!park.accessible_restrooms || !park.accessible_parking || !park.accessible_trails) && (
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-yellow-700">
                This location may not meet all your accessibility needs. Please review the details below.
              </p>
            </div>
          </div>
        </div>
      )}

      <div class="grid gap-4 sm:grid-cols-3">
        <!-- Restrooms -->
        <div class={`p-4 rounded-lg border ${park.accessible_restrooms ? 'bg-white border-green-200 shadow-sm' : 'bg-gray-50 border-gray-200 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_restrooms ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              {park.accessible_restrooms ? (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 11V6a3 3 0 1 1 6 0v5"/><path d="M6 11v-2a4 4 0 0 1 8 0v2"/><path d="M6 11h8"/><path d="M9 11v10"/><path d="M15 11v10"/></svg>
              ) : (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
              )}
            </div>
            <span class="font-bold text-gray-900">Restrooms</span>
          </div>
          <p class="text-sm text-gray-600 font-medium">
            {park.accessible_restrooms ? 'Accessible' : 'Not Available'}
          </p>
        </div>

        <!-- Parking -->
        <div class={`p-4 rounded-lg border ${park.accessible_parking ? 'bg-white border-green-200 shadow-sm' : 'bg-gray-50 border-gray-200 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_parking ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              {park.accessible_parking ? (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M9 17V7h4a3 3 0 0 1 0 6H9"/></svg>
              ) : (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
              )}
            </div>
            <span class="font-bold text-gray-900">Parking</span>
          </div>
          <p class="text-sm text-gray-600 font-medium">
            {park.accessible_parking ? 'Accessible' : 'Not Available'}
          </p>
        </div>

        <!-- Trails -->
        <div class={`p-4 rounded-lg border ${park.accessible_trails ? 'bg-white border-green-200 shadow-sm' : 'bg-gray-50 border-gray-200 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_trails ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              {park.accessible_trails ? (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13.73 21a2 2 0 0 1-3.46 0l-8-14A2 2 0 0 1 4 4h16a2 2 0 0 1 1.73 3l-8 14z"/></svg>
              ) : (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
              )}
            </div>
            <span class="font-bold text-gray-900">Trails</span>
          </div>
          <p class="text-sm text-gray-600 font-medium">
            {park.accessible_trails ? 'Accessible' : 'Not Available'}
          </p>
        </div>
      </div>
  </section>

  <!-- Ad Slot -->
  <div class="my-8">
    <AdSlot id={`content-ad-${park.id}`} format="horizontal" />
  </div>

  <!-- Detailed Amenities -->
  {park.accessibility_details && (
      <div class="space-y-6 mb-8" id="accessibility-details">
        <h2 class="text-2xl font-bold text-gray-900">Detailed Accessibility Info</h2>
        {detailsCategories.map(category => {
          const items = park.accessibility_details?.[category.key];
          if (!items || items.length === 0) return null;
          
          return (
            <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <h3 class="text-lg font-semibold mb-4 text-gray-900 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={category.icon} />
                {category.label}
              </h3>
              <ul class="grid gap-3 sm:grid-cols-2">
                {items.map(item => (
                  <li>
                    <a href={item.url} target="_blank" rel="noopener noreferrer" class="flex items-start gap-2 p-3 rounded-lg bg-gray-50 hover:bg-green-50 transition-colors group border border-gray-100 hover:border-green-200">
                      <span class="text-gray-400 mt-0.5 group-hover:text-green-600 shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                      </span>
                      <span class="text-gray-700 group-hover:text-gray-900 font-medium text-sm">{item.name}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </section>
          );
        })}
      </div>
  )}

  <!-- Affiliate Modules -->
  <section class="mt-12 grid gap-8 md:grid-cols-2 mb-24">
      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <h3 class="font-bold text-gray-900 mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 10.18a5.93 5.93 0 1 1-1.9-5.19"/><path d="M12 2a8 8 0 0 0-8 8c0 2.76 1.34 5.2 3.4 6.7L12 22l4.6-5.3A8 8 0 0 0 12 2Z"/></svg>
            Gear You Might Need
          </h3>
          <p class="text-sm text-gray-600 mb-4">Recommended gear for accessible hiking.</p>
          {park.affiliate_links.gear ? (
            <a href={park.affiliate_links.gear} target="_blank" rel="noopener noreferrer" class="block p-4 bg-gray-50 rounded border border-gray-200 hover:border-green-300 transition-colors">
              <p class="font-medium text-green-700">Shop Accessible Outdoor Gear &rarr;</p>
              <p class="text-sm text-gray-500 mt-1">Support this project by shopping via our partner.</p>
            </a>
          ) : (
             <div class="bg-gray-100 h-32 rounded flex items-center justify-center text-gray-400 text-sm">
              Affiliate Product Grid Placeholder
             </div>
          )}
      </div>
      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <h3 class="font-bold text-gray-900 mb-4 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21h18"/><path d="M5 21V7l8-4 8 4v14"/><path d="M8 9v2"/><path d="M8 13v2"/><path d="M8 17v2"/><path d="M16 9v2"/><path d="M16 13v2"/><path d="M16 17v2"/></svg>
            Where to Stay
          </h3>
          <p class="text-sm text-gray-600 mb-4">Accessible lodging near {park.name}.</p>
          {park.affiliate_links.lodging ? (
            <a href={park.affiliate_links.lodging} target="_blank" rel="noopener noreferrer" class="block p-4 bg-gray-50 rounded border border-gray-200 hover:border-green-300 transition-colors">
              <p class="font-medium text-green-700">Find Accessible Hotels & Cabins &rarr;</p>
              <p class="text-sm text-gray-500 mt-1">Book your stay near {park.name}.</p>
            </a>
          ) : (
             <div class="bg-gray-100 h-32 rounded flex items-center justify-center text-gray-400 text-sm">
              Affiliate Hotel Grid Placeholder
             </div>
          )}
      </div>
  </section>

  <!-- Sticky Mobile Footer -->
  <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4 md:hidden z-50 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)]">
      <div class="flex gap-4">
          <a href="#accessibility-details" class="flex-1 bg-gray-100 text-gray-800 font-semibold py-3 px-4 rounded text-center">
              View Details
          </a>
          <a href={`https://www.google.com/maps/search/?api=1&query=${park.lat},${park.lon}`} target="_blank" rel="noopener noreferrer" class="flex-1 bg-green-600 text-white font-semibold py-3 px-4 rounded text-center">
              Get Directions
          </a>
      </div>
  </div>

</Layout>
