---
import Layout from '../../layouts/Layout.astro';
import DistanceBadge from '../../components/DistanceBadge.astro';
import parksData from '../../../../data/parks.json';
import type { Park } from '../../types';

export async function getStaticPaths() {
  const parks = parksData as Park[];
  return parks.map(park => ({
    params: { slug: park.id },
    props: { park }
  }));
}

interface Props {
  park: Park;
}

const { park } = Astro.props;

// Helper for status badge
const statusColors = {
  verified: 'bg-green-100 text-green-800',
  needs_review: 'bg-yellow-100 text-yellow-800'
};
---

<Layout>
  <main class="container mx-auto px-4 py-8 max-w-3xl">
    <div class="mb-6">
      <a href={`/states/${park.state.split(',')[0].trim()}`} class="text-green-600 hover:underline">&larr; Back to {park.state} Parks</a>
    </div>

    <header class="mb-8">
      <div class="flex items-start justify-between gap-4 flex-wrap">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{park.name}</h1>
          <p class="text-gray-600 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            {park.state}
          </p>
        </div>
        <span class={`px-3 py-1 rounded-full text-xs font-medium uppercase tracking-wide ${statusColors[park.status] || 'bg-gray-100 text-gray-800'}`}>
          {park.status.replace('_', ' ')}
        </span>
      </div>
      
      <DistanceBadge lat={park.lat} lon={park.lon} />
    </header>

    <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
      <h2 class="text-xl font-semibold mb-4 text-gray-900">Accessibility Features</h2>
      <div class="grid gap-4 sm:grid-cols-3">
        
        <!-- Restrooms -->
        <div class={`p-4 rounded-lg border ${park.accessible_restrooms ? 'bg-green-50 border-green-100' : 'bg-gray-50 border-gray-100 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_restrooms ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 11V6a3 3 0 1 1 6 0v5"/><path d="M6 11v-2a4 4 0 0 1 8 0v2"/><path d="M6 11h8"/><path d="M9 11v10"/><path d="M15 11v10"/></svg>
            </div>
            <span class="font-medium text-gray-900">Restrooms</span>
          </div>
          <p class="text-sm text-gray-600">
            {park.accessible_restrooms ? 'Wheelchair accessible restrooms available.' : 'No data or not accessible.'}
          </p>
        </div>

        <!-- Parking -->
        <div class={`p-4 rounded-lg border ${park.accessible_parking ? 'bg-green-50 border-green-100' : 'bg-gray-50 border-gray-100 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_parking ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M9 17V7h4a3 3 0 0 1 0 6H9"/></svg>
            </div>
            <span class="font-medium text-gray-900">Parking</span>
          </div>
          <p class="text-sm text-gray-600">
            {park.accessible_parking ? 'Designated accessible parking spots.' : 'No data or not accessible.'}
          </p>
        </div>

        <!-- Trails -->
        <div class={`p-4 rounded-lg border ${park.accessible_trails ? 'bg-green-50 border-green-100' : 'bg-gray-50 border-gray-100 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_trails ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13.73 21a2 2 0 0 1-3.46 0l-8-14A2 2 0 0 1 4 4h16a2 2 0 0 1 1.73 3l-8 14z"/></svg>
            </div>
            <span class="font-medium text-gray-900">Trails</span>
          </div>
          <p class="text-sm text-gray-600">
            {park.accessible_trails ? 'Paved or wheelchair-friendly trails.' : 'No data or not accessible.'}
          </p>
        </div>

      </div>
    </section>

    <div class="grid md:grid-cols-2 gap-6">
      <!-- Location Info -->
      <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="font-semibold text-gray-900 mb-3">Location Details</h3>
        <dl class="space-y-2 text-sm">
          <div class="flex justify-between">
            <dt class="text-gray-500">Coordinates:</dt>
            <dd class="font-mono text-gray-700">{park.lat.toFixed(4)}, {park.lon.toFixed(4)}</dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-500">Source:</dt>
            <dd class="text-gray-700 uppercase">{park.source}</dd>
          </div>
        </dl>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <a 
            href={`https://www.google.com/maps/search/?api=1&query=${park.lat},${park.lon}`} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-green-600 hover:underline text-sm flex items-center gap-1"
          >
            Open in Google Maps &rarr;
          </a>
        </div>
      </section>

      <!-- Placeholder for Affiliate/Ads -->
      <section class="bg-gray-50 rounded-xl border border-gray-200 p-6 flex items-center justify-center text-center">
        <div>
          <p class="text-gray-400 text-sm mb-2">Sponsored</p>
          <p class="text-gray-500 font-medium">Gear & Lodging recommendations coming soon.</p>
        </div>
      </section>
    </div>

  </main>
</Layout>
