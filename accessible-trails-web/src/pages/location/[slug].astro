---
import Layout from '../../layouts/Layout.astro';
import DistanceBadge from '../../components/DistanceBadge.astro';
import AdSlot from '../../components/AdSlot.astro';
import parksData from '../../../../data/parks.json';
import type { Park } from '../../types';

export async function getStaticPaths() {
  const parks = parksData as Park[];
  return parks.map(park => ({
    params: { slug: park.id },
    props: { park }
  }));
}

interface Props {
  park: Park;
}

const { park } = Astro.props;

// Helper for status badge
const statusColors = {
  verified: 'bg-green-100 text-green-800',
  needs_review: 'bg-yellow-100 text-yellow-800'
};

const title = `${park.name} - Accessible Hiking & Trails in ${park.state}`;
const description = `Find wheelchair accessible restrooms, parking, and trails at ${park.name} in ${park.state}. Plan your accessible outdoor trip today.`;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Park",
  "name": park.name,
  "description": description,
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": park.lat,
    "longitude": park.lon
  },
  "address": {
    "@type": "PostalAddress",
    "addressRegion": park.state
  },
  "amenityFeature": [
    {
      "@type": "LocationFeatureSpecification",
      "name": "Wheelchair Accessible Restrooms",
      "value": park.accessible_restrooms
    },
    {
      "@type": "LocationFeatureSpecification",
      "name": "Accessible Parking",
      "value": park.accessible_parking
    },
    {
      "@type": "LocationFeatureSpecification",
      "name": "Accessible Trails",
      "value": park.accessible_trails
    }
  ]
};

const detailsCategories = [
  { key: 'trails', label: 'Accessible Trails & Viewpoints', icon: 'M13.73 21a2 2 0 0 1-3.46 0l-8-14A2 2 0 0 1 4 4h16a2 2 0 0 1 1.73 3l-8 14z' },
  { key: 'parking', label: 'Accessible Parking', icon: 'M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2' },
  { key: 'camping', label: 'Accessible Camping', icon: 'M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z' }, // Tent icon replacement
  { key: 'lodging', label: 'Accessible Lodging', icon: 'M3 21h18M5 21V7l8-4 8 4v14M8 9v2m8-2v2m-8 4v2m8-2v2' },
  { key: 'restrooms', label: 'Accessible Restrooms', icon: 'M9 11V6a3 3 0 1 1 6 0v5M6 11v-2a4 4 0 0 1 8 0v2M6 11h8M9 11v10M15 11v10' },
  { key: 'general', label: 'Other Accessible Areas', icon: 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z' },
] as const;
---

<Layout title={title} description={description}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <main class="container mx-auto px-4 py-8 max-w-3xl">
    <div class="mb-6">
      <a href={`/states/${park.state.split(',')[0].trim()}`} class="text-green-600 hover:underline">&larr; Back to {park.state} Parks</a>
    </div>

    <header class="mb-8">
      <div class="flex items-start justify-between gap-4 flex-wrap">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{park.name}</h1>
          <p class="text-gray-600 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            {park.state}
          </p>
        </div>
        <span class={`px-3 py-1 rounded-full text-xs font-medium uppercase tracking-wide ${statusColors[park.status] || 'bg-gray-100 text-gray-800'}`}>
          {park.status.replace('_', ' ')}
        </span>
      </div>
      
      <DistanceBadge lat={park.lat} lon={park.lon} />
    </header>

    <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
      <h2 class="text-xl font-semibold mb-4 text-gray-900">Accessibility Features</h2>
      <div class="grid gap-4 sm:grid-cols-3">
        
        <!-- Restrooms -->
        <div class={`p-4 rounded-lg border ${park.accessible_restrooms ? 'bg-green-50 border-green-100' : 'bg-gray-50 border-gray-100 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_restrooms ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 11V6a3 3 0 1 1 6 0v5"/><path d="M6 11v-2a4 4 0 0 1 8 0v2"/><path d="M6 11h8"/><path d="M9 11v10"/><path d="M15 11v10"/></svg>
            </div>
            <span class="font-medium text-gray-900">Restrooms</span>
          </div>
          <p class="text-sm text-gray-600">
            {park.accessible_restrooms ? 'Wheelchair accessible restrooms available.' : 'No data or not accessible.'}
          </p>
        </div>

        <!-- Parking -->
        <div class={`p-4 rounded-lg border ${park.accessible_parking ? 'bg-green-50 border-green-100' : 'bg-gray-50 border-gray-100 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_parking ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M9 17V7h4a3 3 0 0 1 0 6H9"/></svg>
            </div>
            <span class="font-medium text-gray-900">Parking</span>
          </div>
          <p class="text-sm text-gray-600">
            {park.accessible_parking ? 'Designated accessible parking spots.' : 'No data or not accessible.'}
          </p>
        </div>

        <!-- Trails -->
        <div class={`p-4 rounded-lg border ${park.accessible_trails ? 'bg-green-50 border-green-100' : 'bg-gray-50 border-gray-100 opacity-60'}`}>
          <div class="flex items-center gap-3 mb-2">
            <div class={`p-2 rounded-full ${park.accessible_trails ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-500'}`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13.73 21a2 2 0 0 1-3.46 0l-8-14A2 2 0 0 1 4 4h16a2 2 0 0 1 1.73 3l-8 14z"/></svg>
            </div>
            <span class="font-medium text-gray-900">Trails</span>
          </div>
          <p class="text-sm text-gray-600">
            {park.accessible_trails ? 'Paved or wheelchair-friendly trails.' : 'No data or not accessible.'}
          </p>
        </div>

      </div>
    </section>

    {park.accessibility_details && (
      <div class="space-y-6 mb-8">
        <h2 class="text-2xl font-bold text-gray-900">Detailed Accessibility Info</h2>
        {detailsCategories.map(category => {
          const items = park.accessibility_details?.[category.key];
          if (!items || items.length === 0) return null;
          
          return (
            <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <h3 class="text-lg font-semibold mb-4 text-gray-900 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={category.icon} />
                {category.label}
              </h3>
              <ul class="grid gap-3 sm:grid-cols-2">
                {items.map(item => (
                  <li>
                    <a href={item.url} target="_blank" rel="noopener noreferrer" class="flex items-start gap-2 p-3 rounded-lg bg-gray-50 hover:bg-green-50 transition-colors group border border-gray-100 hover:border-green-200">
                      <span class="text-gray-400 mt-0.5 group-hover:text-green-600 shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                      </span>
                      <span class="text-gray-700 group-hover:text-gray-900 font-medium text-sm">{item.name}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </section>
          );
        })}
      </div>
    )}

    <div class="grid md:grid-cols-2 gap-6">
      <!-- Location Info -->
      <section class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="font-semibold text-gray-900 mb-3">Location Details</h3>
        <dl class="space-y-2 text-sm">
          <div class="flex justify-between">
            <dt class="text-gray-500">Coordinates:</dt>
            <dd class="font-mono text-gray-700">{park.lat.toFixed(4)}, {park.lon.toFixed(4)}</dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-500">Source:</dt>
            <dd class="text-gray-700 uppercase">{park.source}</dd>
          </div>
        </dl>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <a 
            href={`https://www.google.com/maps/search/?api=1&query=${park.lat},${park.lon}`} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-green-600 hover:underline text-sm flex items-center gap-1"
          >
            Open in Google Maps &rarr;
          </a>
        </div>
      </section>

      <!-- Affiliate / Ads -->
      <section class="space-y-6">
        <!-- Ad Unit -->
        <AdSlot slotId="park-detail-sidebar" className="w-full" />

        <!-- Gear Affiliate -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 10.18a5.93 5.93 0 1 1-1.9-5.19"/><path d="M12 2a8 8 0 0 0-8 8c0 2.76 1.34 5.2 3.4 6.7L12 22l4.6-5.3A8 8 0 0 0 12 2Z"/></svg>
            Recommended Gear
          </h3>
          {park.affiliate_links.gear ? (
            <a href={park.affiliate_links.gear} target="_blank" rel="noopener noreferrer" class="block p-4 bg-gray-50 rounded border border-gray-200 hover:border-green-300 transition-colors">
              <p class="font-medium text-green-700">Shop Accessible Outdoor Gear &rarr;</p>
              <p class="text-sm text-gray-500 mt-1">Support this project by shopping via our partner.</p>
            </a>
          ) : (
            <div class="p-4 bg-gray-50 rounded border border-gray-200 border-dashed text-center">
              <p class="text-sm text-gray-400">Gear recommendations coming soon.</p>
            </div>
          )}
        </div>

        <!-- Lodging Affiliate -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="font-semibold text-gray-900 mb-3 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21h18"/><path d="M5 21V7l8-4 8 4v14"/><path d="M8 9v2"/><path d="M8 13v2"/><path d="M8 17v2"/><path d="M16 9v2"/><path d="M16 13v2"/><path d="M16 17v2"/></svg>
            Nearby Accessible Stays
          </h3>
          {park.affiliate_links.lodging ? (
            <a href={park.affiliate_links.lodging} target="_blank" rel="noopener noreferrer" class="block p-4 bg-gray-50 rounded border border-gray-200 hover:border-green-300 transition-colors">
              <p class="font-medium text-green-700">Find Accessible Hotels & Cabins &rarr;</p>
              <p class="text-sm text-gray-500 mt-1">Book your stay near {park.name}.</p>
            </a>
          ) : (
            <div class="p-4 bg-gray-50 rounded border border-gray-200 border-dashed text-center">
              <p class="text-sm text-gray-400">Lodging partners coming soon.</p>
            </div>
          )}
        </div>
      </section>
    </div>

  </main>
</Layout>
